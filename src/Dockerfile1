FROM php:8.1-apache

# Install system packages, PHP extensions, and Composer in a single RUN step to optimize layer caching
RUN apt-get update && apt-get install -y \
    unzip \
    git \
    libzip-dev && \
    docker-php-ext-install pdo pdo_mysql zip && \
    # Install Composer
    curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Copy app files
COPY ./ /var/www/html/

# Install PHP dependencies with Composer
WORKDIR /var/www/html
RUN composer install --no-interaction --prefer-dist --optimize-autoloader

# Set permissions and create required directories in a single RUN step
RUN mkdir -p /var/www/html/runtime /var/www/html/web/assets && \
    chmod -R 777 /var/www/html/runtime /var/www/html/web/assets

# Enable Apache mod_rewrite
RUN a2enmod rewrite

# Update DocumentRoot and set up Apache config for the web directory
RUN sed -i 's|DocumentRoot /var/www/html|DocumentRoot /var/www/html/web|g' /etc/apache2/sites-available/000-default.conf && \
    echo "<Directory /var/www/html/web>\n\
    AllowOverride All\n\
    Require all granted\n\
</Directory>" > /etc/apache2/conf-available/webdir.conf && \
    a2enconf webdir

EXPOSE 80

CMD ["apache2-foreground"]
